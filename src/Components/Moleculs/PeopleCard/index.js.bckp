import React from 'react';
import Button from '../../Atoms/Button';

function PeopleCard(props) {

  function SexAvatar(sex) {
    if (sex === 'female') {
      return (
        "url('female1.svg')"
      )
    }
    return (
      "url('male1.svg')"
    )
  }

  let Avatar = {
    backgroundImage: SexAvatar(props.sex),
  }

  return(
    <div className="dib br1 ba b--black-10 bg-white relative" style={Style.Card}>
      <div className="CardImg">
        <div className="aspect-ratio aspect-ratio--1x1">
          <div className="aspect-ratio--object cover bg-orange"
            style={Avatar}>

            </div>
        </div>
      </div>
      <div className="CardContent pa2">
        <div className="flex items-center">
          <div className="w-80">
            <h2 className="truncate f5 mb1">{props.fullName}</h2>
            <p className="f7 gray">{props.Nik}</p>
          </div>
          <div className="CardAction ml2 w-20">
            <Button style={Style.ButtonSize}/>
          </div>
        </div>
      </div>

    </div>
  )
}

const Style={
  Card: {
    width: 160,
    borderSize: '1px',
  },
  ButtonSize: {
    width: 24,
    height: 24,
    padding: 0,
    display: 'block',
    borderRadius: 0,
    backgroundColor: 'transparent',
    backgroundPosition: 'center',
    backgroundSize: 'cover',
    backgroundImage: "url(data:image/svg+xml;base64,)",
  }
}

// data:image/svg+xml;base64,
export default PeopleCard
